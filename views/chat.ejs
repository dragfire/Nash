<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/style.css'/>
    <link rel='stylesheet' href='/libs/materialize/css/materialize.min.css'/>
    <link rel='stylesheet' href='/libs/materialize/font/roboto/Roboto-Medium.ttf'/>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
<div class="container">
    <div class="card-panel teal accent-3">
        <h6 class="center-align black-text darken-4 shades-text">NASH</h6>
        <% console.log(username) %>
        <h6 class="center-align black-text darken-4 shades-text">Welcome <span id="username"><%- username %></span></h6>
    </div>
    <div class="input-field col s12">
        <select id="rooms">
            <option value="general" selected>General</option>
            <option value="angular">Angular</option>
            <option value="socket.io">Socket.io</option>
            <option value="express">Express</option>
            <option value="node">Node</option>
            <option value="mongo">Mongo</option>
        </select>
        <label>Select Room</label>
    </div>
    <div class="row">
        <div class="col s12">
            <div id="content-wrapper">
                <div class="row col s12" id="content">
                    <!--<div id="msg" style="border: 1px solid crimson">-->
                        <!--<span class="pink-text accent-4 uname">Red John</span> says:-->
                        <!--<h6 class="content">Hello How are you?</h6>-->
                    <!--</div>-->
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">mode_edit</i>
                <textarea id="icon_prefix2" class="materialize-textarea msg-content"></textarea>
                <label for="icon_prefix2">Message</label>
            </div>
            <button class="input-field btn waves-effect waves-light btn-large pink accent-3 send-btn">Send
                <i class="material-icons right">send</i>
            </button>
        </div>
    </div>
</div>

<script src="/libs/jquery-2.1.0.min.js"></script>
<script src="/libs/materialize/js/materialize.min.js"></script>
<script src="/libs/socket.io.js"></script>
<script src="/js/sio.js"></script>
<script>
    $(function () {
        $('select').material_select();
    });
</script>
</body>
</html>
